{% extends 'layouts._site.twig' %}

{% block title %}Clasament{% endblock %}

{% block content %}
<div class="panel panel-info">
  <div class="panel-heading">Bun venit!</div>
  <div class="panel-body">
    <p>Clasamentul concurentilor.</p>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Nume</th>
        <th>Voturi</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {% set count = 0 %}
      {% if player is empty %}
      <tr>
        <td colspan="4">Momentan nu exista date in tabel.</td>
      </tr>
      {% else %}
      {% for character in player %}
      <tr>
        {% set count = count +1 %}
        <th scope="row">{{ count }}</th>
        <td><a href="{{ app.request.basepath }}/profil/{{ character.name }}">{{ character.name }}</a></td>
        <td>{{ character.votes }}</td>
        <td>aici buton de vot.</td>
      </tr>
      {% endfor %}
      {% endif %}
    </tbody>
  </table>
</div>
{% endblock %}
